{
  "name": "sudoku-solver",
  "version": "3.4.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "clean": "rimraf dist",
    "prebuild": "pnpm clean",
    "cp3rdpartylicenses": "copyfiles -f dist/sudoku-solver-angular/3rdpartylicenses.txt dist/sudoku-solver-angular/browser",
    "build": "ng build",
    "postbuild": "pnpm cp3rdpartylicenses",
    "predeployghpages": "pnpm build",
    "deployghpages": "gh-pages -d dist/sudoku-solver-angular/browser",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test-once": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "lint": "eslint . --fix --max-warnings 0",
    "format": "prettier --write \"./**/*.{css,scss,html,js,mjs,json,md,ts}\"",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.0.5",
    "@angular/cdk": "19.0.4",
    "@angular/common": "19.0.5",
    "@angular/compiler": "19.0.5",
    "@angular/core": "19.0.5",
    "@angular/forms": "19.0.5",
    "@angular/material": "19.0.4",
    "@angular/platform-browser": "19.0.5",
    "@angular/platform-browser-dynamic": "19.0.5",
    "@angular/router": "19.0.5",
    "@ngx-translate/core": "16.0.4",
    "@ngx-translate/http-loader": "16.0.1",
    "fast-sudoku-solver": "1.1.16",
    "rxjs": "7.8.1",
    "tslib": "2.8.1",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "0.1900.6",
    "@angular-devkit/build-angular": "19.0.6",
    "@angular-devkit/core": "19.0.6",
    "@angular-devkit/schematics": "19.0.6",
    "@angular/cli": "19.0.6",
    "@angular/compiler-cli": "19.0.5",
    "@cypress/schematic": "2.5.2",
    "@types/jasmine": "5.1.5",
    "angular-eslint": "19.0.2",
    "copyfiles": "2.4.1",
    "cypress": "13.17.0",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "gh-pages": "6.2.0",
    "husky": "9.1.7",
    "jasmine-core": "5.5.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "typescript": "5.6.3",
    "typescript-eslint": "8.19.0"
  },
  "lint-staged": {
    "*.{html,js,mjs,ts}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{css,scss,json,md}": "prettier --write"
  }
}
